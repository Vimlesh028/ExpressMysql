<%- include('header') -%>



<div class="text-center center-div pt-5" id="login">
    <div class="container w-25 border pb-5 ">
        <div class="title pt-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for the existing user</span>
            <% if(locals.logout){%>
            <div class="alert alert-success text-center">
                <%=logout%>
            </div>
        <%}
%>        </div>
        <form action="/route/login" class="pt-3" method="POST">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name= "email" >
                <span class="form-text text-muted text-left">Register email address</span>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name= "password" >
                
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Login</button>
        </form>
    </div>
</div>

<%- include('footer') -%>